<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mancala SYSTEM "Stats.dtd">
<?xml-stylesheet href="Transform.xsl" type="text/xsl"?>
<mancala>
    <svg>
        <width>5000</width>
        <height>5000</height>
    </svg>
    <pits>
        <width>100</width>
        <height>100</height>
        <roundX>10</roundX>
        <roundY>10</roundY>
        <style>fill:white;stroke:black;stroke-width:2;</style>
        <pitCount>6</pitCount>
        <nrOfSeedsReset>3</nrOfSeedsReset>
        <top>
            <pit>1</pit>
            <pit>2</pit>
            <pit>3</pit>
            <pit>4</pit>
            <pit>5</pit>
            <pit>6</pit>
        </top>
        <bot>
            <pit>6</pit>
            <pit>5</pit>
            <pit>4</pit>
            <pit>3</pit>
            <pit>2</pit>
            <pit>1</pit>
        </bot>
    </pits>
    <seed>
        <style>fill:black;</style>
    </seed>
    <houses>	
        <radius>100</radius>
        <style>fill:white;stroke:black;stroke-width:2;</style>
        <textstyle>fill:black;font-weight:bold;font-family:Agency FB;</textstyle>
        <house>20</house>
        <house>100</house>
    </houses>
    <layout>
        <posStartX>150</posStartX>
        <posStartY>150</posStartY>
        <distancePitX>15</distancePitX>
        <distancePitY>50</distancePitY>
        <distancePitStore>15</distancePitStore>
        <distanceYextraSeeds>8</distanceYextraSeeds>
        <distanceBetweenExtraSeeds>5</distanceBetweenExtraSeeds>
        <lengthUnit>px</lengthUnit>
        <players>
            <playerTurn>up</playerTurn>
            <highestScore>1000</highestScore>
            <player>
                <name>A</name>
                <currScore>500</currScore>
            </player>
            <player>
                <name>B</name>
                <currScore>800</currScore>
            </player>
        </players>		
    </layout>
</mancala>